<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>E-Gov Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">E-Gov Portal</a>
      <div>
        <% if (typeof user !== 'undefined' && user) { %>
          <span class="text-light me-3">Welcome, <%= user.name %></span>
          <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
        <% } else { %>
          <a href="/login" class="btn btn-outline-light btn-sm me-2">Login</a>
          <a href="/register" class="btn btn-outline-light btn-sm">Register</a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- Main content -->
  <main class="container my-5">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3 mt-5">
    <small>&copy; 2025 E-Government Services Portal</small>
  </footer>

  <!-- âœ… BOOTSTRAP JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>