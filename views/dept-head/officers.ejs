<h2>Manage Officers - <%= department.name %></h2>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <a href="/admin/register-officer" class="btn btn-success">Add New Officer</a>
  </div>
</div>

<% if (officers.length === 0) { %>
  <div class="alert alert-info">
    No officers in your department. 
    <a href="/admin/register-officer" class="alert-link">Add your first officer</a>
  </div>
<% } else { %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Job Title</th>
        <th>Joined</th>
        <th>Department Requests</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% officers.forEach(officer => { %>
        <tr>
          <td><%= officer.id %></td>
          <td><%= officer.name %></td>
          <td><%= officer.email %></td>
          <td><%= officer.job_title || 'Officer' %></td>
          <td><%= new Date(officer.created_at).toLocaleDateString() %></td>
          <td><%= officer.department_requests || 0 %></td>
          <td>
            <a href="/admin/users/<%= officer.id %>/edit" class="btn btn-sm btn-warning">Edit</a>
            <form method="POST" action="/admin/users/<%= officer.id %>/delete" style="display: inline;" 
                  onsubmit="return confirm('Remove <%= officer.name %> from department?')">
              <button type="submit" class="btn btn-sm btn-danger">Remove</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

<div class="mt-3">
  <a href="/dept-head/dashboard" class="btn btn-secondary">‚Üê Back to Dashboard</a>
</div>