<h2>Service Management</h2>

<!-- Success/Error Messages -->
<% if (typeof success !== 'undefined' && success) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= success %>
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %> 
<% if (typeof error !== 'undefined' && error) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= error %>
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addServiceModal">
    Add Service
  </button>
</div>

<div class="card">
  <div class="card-body">
    <% if (!services || services.length === 0) { %>
    <div class="text-center py-4">
      <h5 class="text-muted">No Services Found</h5>
      <p class="text-muted">Get started by creating your first service.</p>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addServiceModal">
        Create First Service
      </button>
    </div>
    <% } else { %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department</th>
            <th>Description</th>
            <th>Fee</th>
            <th>Required Fields</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% services.forEach(service => { %>
          <tr>
            <td><strong>#<%= service.id %></strong></td>
            <td><strong><%= service.name %></strong></td>
            <td><%= service.department_name %></td>
            <td>
              <span class="text-muted"><%= service.description || 'No description' %></span>
            </td>
            <td>$<%= service.fee || 0 %></td>
            <td>
              <% 
                let fields = [];
                if (service.required_fields) {
                  try {
                    if (typeof service.required_fields === 'string') {
                      fields = JSON.parse(service.required_fields);
                    } else {
                      fields = service.required_fields;
                    }
                  } catch (e) {
                    fields = service.required_fields.split(',').map(f => f.trim());
                  }
                }
                
                if (fields && fields.length > 0) {
                  fields.forEach(field => { 
              %>
                    <span class="badge bg-secondary me-1 mb-1"><%= field %></span>
              <% 
                  });
                } else {
              %>
                  <span class="text-muted">None</span>
              <% } %>
            </td>
            <td>
              <div class="btn-group btn-group-sm">
                <a href="/admin/services/<%= service.id %>/edit" class="btn btn-warning">
                  Edit
                </a>
                <form method="POST" action="/admin/services/<%= service.id %>/delete" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete <%= service.name %> service?')">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </div>
</div>

<!-- Add Service Modal -->
<div class="modal fade" id="addServiceModal" tabindex="-1" aria-labelledby="addServiceModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addServiceModalLabel">Add New Service</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form method="POST" action="/admin/services">
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Service Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="name" required placeholder="e.g., Passport Application">
          </div>
          <div class="mb-3">
            <label class="form-label">Department <span class="text-danger">*</span></label>
            <select class="form-select" name="department_id" required>
              <option value="">Select Department</option>
              <% departments.forEach(dept => { %>
                <option value="<%= dept.id %>"><%= dept.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="description" rows="3" placeholder="Brief description of the service..."></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Fee ($)</label>
            <input type="number" class="form-control" name="fee" step="0.01" min="0" value="0">
          </div>
          <div class="mb-3">
            <label class="form-label">Required Fields</label>
            <input type="text" class="form-control" name="required_fields" placeholder='full_name, national_id, address (comma separated)'>
            <small class="text-muted">Enter field names separated by commas</small>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Service</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="mt-3">
  <a href="/admin/dashboard" class="btn btn-secondary">
    ‚Üê Back to Dashboard
  </a>
</div>