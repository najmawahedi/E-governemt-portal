<h2>Service Management</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
  <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addServiceModal">Add Service</button>
</div>

<!-- Success/Error Messages -->
<% if (typeof success !== 'undefined') { %>
  <div class="alert alert-success"><%= success %></div>
<% } %>
<% if (typeof error !== 'undefined') { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Department</th>
      <th>Description</th>
      <th>Fee</th>
      <th>Required Fields</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (!services || services.length === 0) { %>
      <tr>
        <td colspan="7">No services found</td>
      </tr>
    <% } else { %>
      <% services.forEach(service => { %>
        <tr>
          <td><%= service.id %></td>
          <td><%= service.name %></td>
          <td><%= service.department_name %></td>
          <td><%= service.description || 'No description' %></td>
          <td>$<%= service.fee || 0 %></td>
          <td>
            <% 
              let fields = [];
              if (service.required_fields) {
                try {
                  // Try to parse as JSON
                  if (typeof service.required_fields === 'string') {
                    fields = JSON.parse(service.required_fields);
                  } else {
                    fields = service.required_fields;
                  }
                } catch (e) {
                  // If not valid JSON, treat as comma-separated string
                  fields = service.required_fields.split(',').map(f => f.trim());
                }
              }
              
              if (fields && fields.length > 0) {
                fields.forEach(field => { 
            %>
                  <span class="badge bg-secondary me-1 mb-1"><%= field %></span>
            <% 
                });
              } else {
            %>
                <span class="text-muted">None</span>
            <% } %>
          </td>
          <td>
            <a href="/admin/services/<%= service.id %>/edit" class="btn btn-sm btn-warning">Edit</a>
            <form method="POST" action="/admin/services/<%= service.id %>/delete" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete <%= service.name %> service?')">
              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

<!-- Add Service Modal -->
<div class="modal fade" id="addServiceModal" tabindex="-1" aria-labelledby="addServiceModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addServiceModalLabel">Add New Service</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form method="POST" action="/admin/services">
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Service Name</label>
            <input type="text" class="form-control" name="name" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Department</label>
            <select class="form-select" name="department_id" required>
              <option value="">Select Department</option>
              <% departments.forEach(dept => { %>
                <option value="<%= dept.id %>"><%= dept.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="description" rows="3"></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Fee ($)</label>
            <input type="number" class="form-control" name="fee" step="0.01" min="0" value="0">
          </div>
          <div class="mb-3">
            <label class="form-label">Required Fields</label>
            <input type="text" class="form-control" name="required_fields" placeholder='full_name, national_id, address (comma separated)'>
            <small class="text-muted">Enter field names separated by commas</small>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Service</button>
        </div>
      </form>
    </div>
  </div>
</div>