<h2>System Reports</h2>

<div class="row mb-4">
  <div class="col-md-3">
    <div class="card text-white bg-primary">
      <div class="card-body text-center">
        <h5>Total Requests</h5>
        <h3><%= reports.totalRequests %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-white bg-success">
      <div class="card-body text-center">
        <h5>Approved</h5>
        <h3><%= reports.approvedRequests %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-white bg-danger">
      <div class="card-body text-center">
        <h5>Rejected</h5>
        <h3><%= reports.rejectedRequests %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-white bg-info">
      <div class="card-body text-center">
        <h5>Total Revenue</h5>
        <h3>$<%= reports.totalRevenue %></h3>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5>Requests by Department</h5>
      </div>
      <div class="card-body">
        <table class="table table-sm table-striped">
          <thead>
            <tr>
              <th>Department</th>
              <th>Total</th>
              <th>Approved</th>
              <th>Rejected</th>
            </tr>
          </thead>
          <tbody>
            <% if (!reports.requestsByDepartment || reports.requestsByDepartment.length === 0) { %>
              <tr><td colspan="4">No data available</td></tr>
            <% } else { %>
              <% reports.requestsByDepartment.forEach(dept => { %>
                <tr>
                  <td><%= dept.department_name %></td>
                  <td><%= dept.total_requests %></td>
                  <td class="text-success"><%= dept.approved %></td>
                  <td class="text-danger"><%= dept.rejected %></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5>Revenue by Department</h5>
      </div>
      <div class="card-body">
        <table class="table table-sm table-striped">
          <thead>
            <tr>
              <th>Department</th>
              <th>Total Revenue</th>
            </tr>
          </thead>
          <tbody>
            <% if (!reports.revenueByDepartment || reports.revenueByDepartment.length === 0) { %>
              <tr><td colspan="2">No revenue data</td></tr>
            <% } else { %>
              <% reports.revenueByDepartment.forEach(dept => { %>
                <tr>
                  <td><%= dept.department_name %></td>
                  <td>$<%= dept.total_collected || 0 %></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>